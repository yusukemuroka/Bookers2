<h1 class="head">Editing Book</h1>
<%= form_with model: @book do |f| %>
    <div class="box">
    <p>Title</p>
    <%= f.text_field :title %>
    </div>
    
    <div class="box">
    <p>Body</p>
    <%= f.text_area :body %>
    </div>

    <div class="box"><%= f.submit 'Update Book' %></div>
    <% end %>

    <span class="link_button"><%= link_to 'show', book_path(@book.id)%></span> |
    <span class="link_button"><%= link_to 'back', books_path%></span>
    </body>