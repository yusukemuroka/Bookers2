<div class="head row d-flex justify-content-center lg-7">
<h2>Editing Book</h2>
</div>
<div class="main row d-flex justify-content-center lg-7">
    <%= form_with model: @book do |f| %>
        <div class="pt=3 w-100">Title</div>
        <%= f.text_field :title %>
        <div class="pt-3 w-100">Opinion</div>
            <%= f.text_area :body %>
           <div class="pt-3 w-100">
            <%= f.submit "Update Book" ,class: "btn btn-success"%>
            </div>
    <% end %>
    </div>
    <div class="main row d-flex justify-content-center lg-7">
    <%= link_to 'Show', book_path(@book.id)%> |
    <%= link_to 'Back', books_path%>
    </div>
