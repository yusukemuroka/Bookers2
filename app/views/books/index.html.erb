<div class="container">
    <div class="main row">
        <div class="col-lg-5">
            <%= render 'users/info', user: @user %>
            <%= render 'new', book: @book %>
        </div>
        <div class="col-lg-7">
            <h2>Books</h2>
            <table class="table table-striped">
                <tr>
                    <th>Title</th><th>Body</th>
                </tr>
                <% @books.each do |book| %>
                <tr>
                    <td><%= image_tag book.user.get_profile_image(80,80) %></td>
                    <td><%= book.title %></td>
                    <td><%= book.opinion %></td>
                    <td><span class="link_button"><%= link_to 'Show' , book_path(book.id) %></span></td>
                    <% if book.user == current_user %>
                    <td><span class="link_button"><%= link_to 'Edit' , edit_book_path(book.id) %></span></td>
                    <td><span class="link_button"><%= link_to 'Destroy' ,book_path(book.id) , method: :delete ,data: { confirm: "Are you sure?"} %></span></td>
                    <% end %>
                </tr>
            <% end %>
            </table>
        </div>
    </div>
</div>