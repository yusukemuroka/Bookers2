<div class="container">
<div class="info row">
<h2>User info</h2>
<table class="table">
    <tr><td><%= image_tag user.get_profile_image(100,100) %></td></tr>
    <tr><td>name</td><td><%= user.name %></td></tr>
    <tr><td>introduction</td><td><%= user.introduction %></td></tr>
</table>
</div>
<div class="edit row">
<%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe, edit_user_path(user[:id]), class: "btn btn-secondary bg-white text-dark w-100" %>
</div>
</div>